import java.util.*;
import java.text.*;

public class Lab101 {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		DecimalFormat frm = new DecimalFormat("#,###.00");
		System.out.print("Input Product Name : ");
		String productName = scan.nextLine();
		System.out.print("Input Product Unit : ");
		int productUnit = scan.nextInt();
		System.out.print("Input Price per unit : ");
		float pricePerUnit = scan.nextFloat();
		scan.nextLine();
		System.out.println("-------------------------------------------------------");
		float totalPrice = pricePerUnit*productUnit;
		System.out.println("Total Price is :"+frm.format(totalPrice)+"baht");
		System.out.println("-------------------------------------------------------");
		System.out.print("How many discount (%) :");
		int dis = scan.nextInt();
		float total = totalPrice*dis/100;
		System.out.println("-------------------------------------------------------");
		System.out.println("Discount from "+dis+"%" +"\t"+total+"baht");
		System.out.println("Amount to be paid\t"+(totalPrice-total)+"baht");
		
	}

}
